# Application Configuration
PORT=4000
NODE_ENV=development
COOKIE_SECRET=your-cookie-secret-key

# Database Configuration (Local PostgreSQL container)
DATABASE_URL=postgresql://postgres:password@localhost:5432/otto_handler

# Redis Configuration (Local Redis container) 
REDIS_URL=redis://localhost:6379

# GitHub App Configuration
# Create a GitHub App and set these values:
# 1. Go to GitHub Settings > Developer settings > GitHub Apps
# 2. Create a new app and copy the App ID
# 3. Generate a private key and paste the content below
OTTO_GITHUB_APP_ID=your_github_app_id_here
OTTO_GITHUB_APP_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----
your_private_key_content_here
-----END RSA PRIVATE KEY-----"

OTTOSCALER_GRPC_URL=localhost:50051

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

